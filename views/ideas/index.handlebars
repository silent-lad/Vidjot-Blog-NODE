{{# each ideas}}
<div class="card card-body m-2">
  <h4>{{title}}</h4>
  <p>{{details}}</p>
  <a class="btn btn-dark btn-block mb-2" href="/ideas/edit/{{id}}">Edit</a>
  <form action="/ideas/{{id}}?_method=DELETE" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <input class="btn btn-danger btn-block" type="submit" name="" value="DELETE">
  </form>
</div>
{{else}}
<p>No Video idea listed.</p>
{{/each}}